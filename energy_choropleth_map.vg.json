{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Energy Consumption",
  "width": 800,
  "height": 400,
  "background": null,
  "board": {"style": "null"},
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },"params": [
    {
      "name": "Year: ",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2022,
        "step": 1
      }
    }
  ],
  "layer":[    {
    "transform": [
      {
        "calculate": "'Data is not available in ' + datum.properties.NAME",
        "as": "note"
      }
    ],
    "mark": { "type": "geoshape", "fill": "lightgray", "stroke": "white" },
    "encoding": { "tooltip": { "field": "note" } }
  },
  {
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
      "format": { "type": "topojson", "feature": "oceans" }
    },
    "mark": { "type": "geoshape", "fill": "skyblue" }
  },
  {
    "data": {
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
      "format": { "type": "topojson", "feature": "ne_110m_graticules_30" }
    },
    "mark": { "type": "geoshape", "fill": null, "stroke": "lightgray" }
  },{
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "data/normalized_energy-intensity.csv" 
          },
          "key": "Entity", 
          "fields": ["Primary energy consumption per GDP (kWh/$)"]
        }
      },
      
      {
        "bin": true,  
        "field": "Normalized",
        "as": "Primary energy consumption per GDP (kWh/$)" 
      }
    ],
    "mark": {"type": "geoshape","stroke": "black",
    "strokeWidth": 0.5},
    "encoding": {
      "color": {
        "field": "Primary energy consumption per GDP (kWh/$)", 
        "type": "quantitative", 
        "scale": {"type": "threshold", "domain": [0.4,0.7,1,1.3,1.6,1.9,2.2],"scheme": "lightgreyred"},
        "legend": {"title": "Consumption per GDP", "orient": "bottom-left"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Primary energy consumption per GDP (kWh/$)", "type": "quantitative", "title": "Primary energy consumption per GDP (kWh/$)"}
      ]
    }
  },{
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/countryInfo.csv"
          },
          "key": "name",
          "fields": ["latitude", "longitude"]
        }
      }
    ],
    "mark": { "type": "text" },
    "encoding": {
      "longitude": { "field": "longitude", "type": "quantitative" },
      "latitude": { "field": "latitude", "type": "quantitative" },
      "text": { "field": "properties.NAME", "type": "nominal" },
      "opacity": {
        "condition": {
          "test": "datum['properties.NAME'] == 'Paraguay' || datum['properties.NAME'] == 'Russia' || datum['properties.NAME'] == 'Brazil' || datum['properties.NAME'] == 'Australia' || datum['properties.NAME'] == 'Malaysia' ||  datum['properties.NAME'] == 'Canada' ||  datum['properties.NAME'] == 'United States of America'",
          "value": 1
        },
        "value": 0
      }
    }}

  ]
  
}
