{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Primary energy consumption by source",
  "width": 600,
  "height": 300,  
  "data": {
    "url": "data/per-capita-energy-stacked.csv"
  },
  "params": [
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          "World",
          "Malaysia",
          "Australia",
          "United States of America",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "World",
          "Malaysia",
          "Australia",
          "United States",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Location: "
      }
    }
  ],

  "transform": [
    {
      "filter": "Continent_selection == null || datum.Entity == Continent_selection"
    },
    {
      "fold": [
        "Coal",
        "Oil",
        "Gas",
        "Nuclear",
        "Hydro",
        "Wind",
        "Solar",
        "Other renewables"
      ]
    }
  ],
  "layer": [
    {
      "mark": { "type": "arc", "innerRadius": 0, "outerRadius": 100 },
      "encoding": {
        "theta": { "field": "key", "type": "nominal" },
        "radius": { "field": "value", "type": "quantitative" },
        "tooltip": [
          { "field": "key", "type": "nominal", "title": "Source" },
          { "field": "value", "type": "quantitative", "title": "kWh per capita" }]
        }
      }
    ,
    {
      "mark": { "type": "text" },
      "encoding": {
        "text": { "field": "key", "type": "nominal" },
        "radius": { "value": 120 }
      }
    }
  ],
  "encoding": {
    "theta": { "field": "key", "type": "nominal" },
    "radius": {
      "field": "value",
      "scale": { "type": "sqrt", "zero": true, "rangeMin": 20 }
    },
    "color": {
      "field": "key",
      "type": "nominal",
      "scale": {
        "range": ["#AEC7E8", "#ff7f0e",  "#ffbb78", "#2ca02c","#98df8a", "#d62728", "#ff9896", "#c5b0d5"] 
      },"legend": null
    }
  }
}
